<script>
    /* Horizontal Scrolling - Enhanced for trackpads and mice */
    const container = document.getElementById("bottomNav");
    
    container.addEventListener("wheel", function (e) {
        // Check if this is a horizontal scroll attempt (trackpad horizontal swipe)
        // or a vertical scroll that we should convert to horizontal
        
        // If there's horizontal delta, let it scroll naturally (trackpad swipe)
        if (Math.abs(e.deltaX) > 0) {
            return; // Let the browser handle it naturally
        }
        
        // If it's a vertical scroll (mouse wheel or trackpad vertical), 
        // convert it to horizontal only if the shift key is NOT pressed
        // and only if deltaY is significantly larger than deltaX
        if (Math.abs(e.deltaY) > Math.abs(e.deltaX)) {
            container.scrollLeft += e.deltaY;
            e.preventDefault();
        }
    }, { passive: false });

    /* https://stackoverflow.com/questions/18481308/set-mouse-wheel-to-horizontal-scroll-using-css */
</script>