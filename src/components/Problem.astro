---
import Latex from '../components/Latex.astro'; // Adjust the path as needed

const { n, img } = Astro.props;
---


<div class="card">
  <div class="content">
    {img && <img src={img.src} alt= {'Problem ' + n} />}
    <p>{n}.</p>
    <slot></slot>
  </div>
</div>


<style>

.card{
  display: flex;
  gap:2em;

}
.content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

img {
  max-width: 100%;
  height: auto;
}

</style>