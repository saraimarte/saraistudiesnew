---
const { t , a} = Astro.props;
---

<a href = {a} class="quickie">
  <p>{t}</p>
</a>

<style>

	a{
		text-decoration: none;
	}

  .quickie {
    background-color: rgb(145, 202, 204);
    border-radius: 50%;
    width: 6rem;
    height: 6rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
    padding: 0.3rem;
  }

  .quickie:hover {
    position: relative;
    top: -2px;
  }

  p {
    color: white;
    margin: 0;
    line-height: 1.2;
    word-break: break-word;
  }
</style>
