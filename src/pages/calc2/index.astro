---
import ClassHomePage from '@layouts/ClassHomePage.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

// Fetch all blog posts
const allCalc2Posts: CollectionEntry<'calc2'>[] = (await getCollection('calc2'));


export async function getStaticPaths() {
  const allCalc2Posts: CollectionEntry<'calc2'>[] = await getCollection('calc2');

  return allCalc2Posts.map(entry => ({
    params: {
      slug: entry.slug
    }
  }));
}

const allArticles = allCalc2Posts;
const folderPath1 = "../toolbox";
const folderPath2 = "../rankings";
const folderPath3 = "../ratings";
const pathHome =  './';

---

<ClassHomePage 
 folderPath1= {folderPath1} 
  folderPath2 = {folderPath2} 
  folderPath3 = {folderPath3} 
  pathHome = {pathHome}
  pageTitle="Calc II Directory" 
  allArticles = {allArticles} 
  className = "calc2" 
  fullClassTitle = "Calculus II for the Mathematical and Physical Sciences (Calc 2) 01:640:152">
</ClassHomePage>
