---
import ClassHomePage from '@layouts/ClassHomePage.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

// Fetch all blog posts
const allstatMethodsPosts: CollectionEntry<'statMethods'>[] = (await getCollection('statMethods')).filter((post) => post.data.draft === false);


export async function getStaticPaths() {
  const allstatMethodsPosts: CollectionEntry<'statMethods'>[] = (await getCollection('statMethods')).filter((post) => post.data.draft === false);

  return allstatMethodsPosts.map(entry => ({
    params: {
      slug: entry.slug
    }
  }));
}

const allArticles = allstatMethodsPosts;
const folderPath1 = "../toolbox";
const folderPath2 = "../rankings";
const folderPath3 = "../ratings";
const pathHome =  './';

---

<ClassHomePage
folderPath1= {folderPath1} 
  folderPath2 = {folderPath2} 
  folderPath3 = {folderPath3} 
  pathHome = {pathHome} 
  pageTitle="Intro to Stat Methods for Business Directory" 
  allArticles = {allArticles} 
  className = "statMethods" 
  fullClassTitle = "Intro to Stat Methods for Business 33:136:385">
</ClassHomePage>
