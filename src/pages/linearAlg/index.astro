---
import ClassHomePage from '@layouts/ClassHomePage.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

// Fetch all blog posts
const allPosts: CollectionEntry<'linearAlg'>[] = (await getCollection('linearAlg')).filter((post) => post.data.draft === false);


export async function getStaticPaths() {
  const allPosts: CollectionEntry<'linearAlg'>[] = (await getCollection('linearAlg')).filter((post) => post.data.draft === false);

  return allPosts.map(entry => ({
    params: {
      slug: entry.slug
    }
  }));
}

const allArticles = allPosts;
const folderPath1 = "../toolbox";
const folderPath2 = "../rankings";
const folderPath3 = "../ratings";
const pathHome =  './';

---

<ClassHomePage
  folderPath1= {folderPath1} 
  folderPath2 = {folderPath2} 
  folderPath3 = {folderPath3} 
  pathHome = {pathHome} 
  pageTitle="Introductory Linear Algebra Directory" 
  allArticles = {allArticles} 
  className = "linearAlg" 
  fullClassTitle = "Introductory Linear Algebra 01:640:250">
</ClassHomePage>
