---
import ClassHomePage from '@layouts/ClassHomePage.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

// Fetch all blog posts
const allPosts: CollectionEntry<'latinoWorkers'>[] = (await getCollection('latinoWorkers'));


export async function getStaticPaths() {
  const allPosts: CollectionEntry<'latinoWorkers'>[] = await getCollection('latinoWorkers');

  return allPosts.map(entry => ({
    params: {
      slug: entry.slug
    }
  }));
}

const allArticles = allPosts;
const folderPath1 = "../toolbox";
const folderPath2 = "../rankings";
const folderPath3 = "../ratings";
const pathHome =  './';

---

<ClassHomePage
  folderPath1= {folderPath1} 
  folderPath2 = {folderPath2} 
  folderPath3 = {folderPath3} 
  pathHome = {pathHome} 
  pageTitle="Latino Workers in the US Directory" 
  allArticles = {allArticles} 
  className = "latinoWorkers" 
  fullClassTitle = "Latino Workers in the US 37:575:307">
</ClassHomePage>
