---
import ClassHomePage from '@layouts/ClassHomePage.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

// Fetch all blog posts
const allCalc1Posts: CollectionEntry<'calc1'>[] = (await getCollection('calc1')).filter((post) => post.data.draft === false);

export async function getStaticPaths() {
  const allCalc1Posts: CollectionEntry<'calc1'>[] = (await getCollection('calc1')).filter((post) => post.data.draft === false);

  return allCalc1Posts.map(entry => ({
    params: {
      slug: entry.slug
    }
  }));
}

const allArticles = allCalc1Posts;
const folderPath1 = "../toolbox";
const folderPath2 = "../rankings";
const folderPath3 = "../ratings";
const pathHome =  './';

---

<ClassHomePage 
  folderPath1= {folderPath1} 
  folderPath2 = {folderPath2} 
  folderPath3 = {folderPath3} 
  pathHome = {pathHome}
  pageTitle="Calc I Directory" 
  allArticles = {allArticles} 
  className = "calc1" 
  fullClassTitle = "Calculus I for the Life and Social Sciences (Calc 1) 01:301:135">
</ClassHomePage>
