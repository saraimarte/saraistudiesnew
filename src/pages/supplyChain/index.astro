---
import ClassHomePage from '@layouts/ClassHomePage.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

// Fetch all blog posts
const allSupplyChainPosts: CollectionEntry<'supplyChain'>[] = (await getCollection('supplyChain')).filter((post) => post.data.draft === false);


export async function getStaticPaths() {
  const allSupplyChainPosts: CollectionEntry<'supplyChain'>[] = (await getCollection('supplyChain')).filter((post) => post.data.draft === false);

  return allSupplyChainPosts.map(entry => ({
    params: {
      slug: entry.slug
    }
  }));
}

const allArticles = allSupplyChainPosts;
const folderPath1 = "../toolbox";
const folderPath2 = "../rankings";
const folderPath3 = "../ratings";
const pathHome =  './';

---

<ClassHomePage 
 folderPath1= {folderPath1} 
  folderPath2 = {folderPath2} 
  folderPath3 = {folderPath3} 
  pathHome = {pathHome}
  pageTitle="Intro to Supply Chain Management Directory" 
  allArticles = {allArticles} 
  className = "supplyChain" 
  fullClassTitle = "Intro to Supply Chain Management 29:799:301">
</ClassHomePage>
